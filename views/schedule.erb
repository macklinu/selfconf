<div class="mid_block">
	<div class="container">
		<div class="row">
            <div class="offset1 span10">
                <div class="visible-desktop">
                    <h4>Friday, May 30th</h4>
                    <table class="table table-striped table-bordered">
                        <% @friday.keys.each do | slot | %>
                            <tr>
                                <td>
                                     <h5><%= DateTime.strptime(slot, '%m/%d/%Y %H:%M:%S').strftime('%l:%M %p') %></h5>
                                </td>

                                <% rooms = @friday[slot] %>
                                <% if (rooms.length > 1) %>
                                    <% rooms.each do | row | %>
                                        <td <% if (row['slots'] > 1) %>rowspan="<%= row['slots'] %>"<% end %>>
                                            <% hasLink = row['anchor'] != 'none' %>
                                            <% if hasLink %><a href="/speakers#<%= row['anchor'] %>"><% end %>
                                            <%= row['name'] %><% if hasLink %> – <%= row['title'] %><% end %>
                                            <% if hasLink %></a><% end %>
                                        </td>
                                    <% end %>
                                <% else %>
                                    <td colspan="7">
                                        <% row = @friday[slot].first %>
                                        <% hasLink = row['anchor'] != 'none' %>
                                        <% if hasLink %><a href="/speakers#<%= row['anchor'] %>"><% end %>
                                        <%= row['name'] %><% if hasLink %> – <%= row['title'] %><% end %>
                                        <% if hasLink %></a><% end %>
                                    </td>
                                <% end %>
                            </tr>
                        <% end %>
                    </table>

                    <h4>Saturday, May 31st</h4>
                    <table class="table table-striped table-bordered">
                        <% @saturday.keys.each do | slot | %>
