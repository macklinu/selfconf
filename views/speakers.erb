<div class="mid_block">
	<div class="container">
		<div class="row">
            <div class="offset1 span3 visible-desktop">
                <div class="speaker-nav" id="top" data-spy="affix" data-offset-top="272">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#names" data-toggle="tab">Names</a></li>
                        <li><a href="#talks" data-toggle="tab">Talks</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="names">
                            <div class="nav-wrapper">
                                <ul class="nav nav-list">
                                    <% @speaker_nav.each do | speaker | %>
                                        <li>
                                            <a href="#<%= speaker[:anchor] %>"><i class="icon-chevron-right"></i><%= speaker[:name] %></a>
                                        </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                        <div class="tab-pane" id="talks">
                            <div class="nav-wrapper">
                                <ul class="nav nav-list">
                                    <% @talk_nav.each do | talk | %>
                                        <li>
                                            <a href="#<%= talk[:anchor] %>"><i class="icon-chevron-right"></i><%= talk[:title] %></a>
                                        </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

			<div class="span7">
				<ul class="speaker-list">
                    <% @speakers.each do | speaker | %>
                        <li class="speaker" id="<%= speaker['name_anchor'] %>">
                            <div id="<%= speaker['talk_anchor'] %>">
                                <img src="<%= speaker['headshot'] %>" class="img-polaroid img-rounded speaker-img pull-left">
                                <h4><%= speaker['name'] %> â€“ <%= speaker['title'] %></h4>
                                <% if (speaker['twitter'].length > 0) %>
                                <h5 class="italic"><a href="http://twitter.com/<%= speaker['twitter'] %>"><%= speaker['twitter'] %></a></h5>
                                <% end %>
                                <p><%= speaker['description'] %></p>

                                <h5 class="italic">About <%= speaker['name'] %>:</h5>
                                <p><%= speaker['bio'] %></p>
                            </div>
                        </li>
                    <% end %>
				</ul>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
    $(function() {
        $('.nav-tabs li>a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        })
    });
</script>
